<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:transitionName="courseImage"/>

            <TextView
                android:id="@+id/searchCoursesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignParentEnd="true"
                android:background="#55000000"
                android:fontFamily="serif"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchCoursesDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchCoursesName"
                android:fontFamily="serif"
                android:text="TextView"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/searchCoursesLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchCoursesDescript"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-condensed"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/searchCoursesDescript"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:text="Szczegóły"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>