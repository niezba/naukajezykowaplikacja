<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:gravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/answerOneImg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Odpowiedź 1"
                android:textAlignment="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/answerTwoImg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Odpowiedź 2"
                android:textAlignment="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/answerThreeImg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Odpowiedź 3"
                android:textAlignment="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/answerFourImg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Odpowiedź 4"
                android:textAlignment="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </TableRow>

    </TableLayout>

</LinearLayout>